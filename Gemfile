source 'https://rubygems.org'
ruby '2.2.3'

gem 'rails', '4.2.6'
gem 'rails-api'
gem 'spring', :group => :development

# Acts as the interface between Ruby and MongoDB
gem 'mongoid'
gem 'bson', '~> 3.0'

# Opens up geocoding methods for MongoDB via Ruby
gem 'geocoder', '~> 1.3', '>= 1.3.4'

gem 'rails_12factor'

# Allows the decoupling to happen.
gem 'rack-cors', :require => 'rack/cors'
